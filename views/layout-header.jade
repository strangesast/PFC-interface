extends layout

block content
  nav.navbar.navbar-default.navbar-fixed-top
    .container
      .navbar-header
        button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
          span.sr-only Toggle
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="/") Turkey
      #navbar.navbar-collapse.collapse
        if user
          a.navbar-text.navbar-right(href="/user") #{user.username}
        else
          form#login-form.navbar-form.navbar-right(action="/user/login", method="POST")
            .form-group
              input.form-control(type="email", name="username", pattern=".+@clarkson.edu", placeholder="email", title="You must use a clarkson email address")
            .form-group
              input.form-control(type="password", name="password", pattern=".+", placeholder="password", title="Password must be at least 1 character")

            button.btn.btn-success(type="submit") Sign in
            a.btn.btn-default(href="/user/register") Register

  block main-content
